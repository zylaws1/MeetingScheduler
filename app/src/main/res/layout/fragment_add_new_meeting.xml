<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearlayout_setup_meeting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="@drawable/post_status_bg"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="0.5"
                    android:text="Meeting Name"
                    android:textColor="@color/colorBottomNavigation"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/edit_txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="46dp"
                    android:layout_marginRight="46dp"
                    android:layout_marginTop="-4dp"
                    android:layout_weight="0.5"
                    android:alpha="0.7"
                    android:background="@drawable/setup_new_meeting_bg_purple"
                    android:text="@string/meet_name"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="46sp"
                    android:layout_marginRight="46sp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2sp"
                        android:layout_weight="1.2"
                        android:text="Room"
                        android:gravity="left"
                        android:textColor="@color/colorBottomNavigation"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="14sp"
                        android:layout_marginTop="2sp"
                        android:layout_weight="1"
                        android:text="Venue"
                        android:textColor="@color/colorBottomNavigation"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginRight="46sp"
                    android:layout_marginLeft="46sp"
                    android:orientation="horizontal">

                    <EditText
                       android:id="@+id/edit_txt_room"
                        android:layout_width="match_parent"
                        android:layout_height="32sp"
                        android:layout_marginTop="-4sp"
                        android:layout_weight="1.2"
                        android:alpha="0.7"
                        android:background="@drawable/setup_new_meeting_bg_purple"
                        android:text="eg: n113"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edit_txt_venue"
                        android:layout_width="match_parent"
                        android:layout_height="32sp"
                        android:layout_marginStart="10sp"
                        android:textAlignment="center"
                        android:layout_marginTop="0sp"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:background="@drawable/setup_new_meeting_bg_purple"
                        android:text="eg: Hancock library"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50sp"
                    android:layout_marginTop="5sp"
                    android:layout_weight="0.5"
                    android:text="Quick Description"
                    android:textColor="@color/colorBottomNavigation"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edit_txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_marginLeft="38sp"
                    android:layout_marginRight="38sp"
                    android:layout_marginTop="0sp"
                    android:layout_weight="2"
                    android:alpha="0.7"
                    android:background="@drawable/setup_new_meeting_bg_purple"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false"
                    android:singleLine="false"
                    android:text="eg: This is a sample description such as this meeting will discuss about the advanced features about meeting scheduler for comp2100 group project"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:layout_marginTop="8sp"
                    android:layout_marginLeft="49sp"
                    android:layout_marginRight="49sp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Meeting time"
                        android:textColor="@color/colorBottomNavigation"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textAlignment="textEnd"
                        android:text="Preference time:"
                        android:textColor="@color/colorBottomNavigation"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinner_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6sp"
                        android:layout_weight="3.1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="46sp"
                    android:layout_marginTop="0sp"
                    android:layout_marginRight="46sp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7sp"
                        android:layout_weight="0.5"
                        android:onClick="chooseDate"
                        android:text="select date" />

                    <Button
                        android:id="@+id/btn_Time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7sp"
                        android:layout_weight="0.5"
                        android:onClick="chooseTime"
                        android:text="select time" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="46sp"
                    android:layout_marginRight="46sp"
                    android:paddingBottom="3sp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="eg: yyyy/mm/dd"
                        android:layout_weight="1"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="eg: hh:mm"
                        android:layout_weight="1"
                        android:textSize="18sp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.3"
                    android:text="@string/add_meeting"
                    android:textSize="16sp"
                    android:onClick="addMeeting"/>

                <Button
                    android:id="@+id/btn_cancel_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4sp"
                    android:layout_weight="0.3"
                    android:onClick="cancelAdd"
                    android:text="@string/cancel"
                    android:textSize="17sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>