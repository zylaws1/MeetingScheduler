<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/profile_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textAlignment="center"
                android:textSize="34dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginRight="76dp"
                android:layout_marginTop="-42dp"
                android:alpha="0.9"
                android:onClick="pickPhoto"
                app:srcCompat="@drawable/ic_settings_black_24dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:text="description description description description description description description description description description description description description description"
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="32dp"
                android:layout_marginTop="-32dp"
                android:alpha="0.8"
                app:srcCompat="@android:drawable/ic_menu_edit"
                android:onClick="editUserProfileDescription"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginTop="80dp"
                android:alpha="0.6"
                android:background="@drawable/post_status_bg"
                android:text="Scroll down to view meetings"
                android:textAlignment="center"
                android:textColor="@color/scroll_tips"
                android:textSize="23dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                app:srcCompat="@android:drawable/arrow_down_float" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:layout_marginTop="10dp"
                android:alpha="0.82"
                android:background="@drawable/post_status_bg"
                android:clickable="true"
                android:onClick="setUpNewMeetings"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_add_new_meeting"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="add new meeting"
                    android:textAlignment="center"
                    android:textColor="@drawable/setup_new_meeting_selector"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="3.9"
                    app:srcCompat="@android:drawable/ic_input_add" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
